<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a class="btn btn-primary btn-sm my-3" href="/"> Go product page</a>
            <div class="card">
                <div class="card-body">
                    <div class="product">
                        <img class="object-fit: cover; w-100" src="/product/<%= product.photo %>" alt="Product Name">
                        <div class="product-info">
                            <h2>
                                <%= product.name %>
                            </h2>
                            <p class="price">
                                <span>Price :</span>
                                <%= product.salePrice %>
                            </p>
                            <p class="description">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                            <button class="add-to-cart">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>